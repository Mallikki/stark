/* stark-ui: packages/stark-ui/src/modules/app-logo/components/app-logo.component.pcss */

.stark-app-logo a {
  margin: 6px auto 0 auto;
}

@media screen and (--tablet) {
  .stark-app-logo {
    & i {
      display: block;
      width: 60px;
      height: 64px;
      margin-top: 4px;
      background-image: url(/assets/stark-ui/app-logo/angular.png); /* FIXME: add image for tablet */
      background-size: 100% 100%;
    }
  }
}

@media screen and (--desktop) {
  .stark-app-logo {
    & i {
      display: block;
      width: 120px;
      height: 128px;
      background-image: url(/assets/stark-ui/app-logo/angular.png); /* FIXME: add image for desktop */
      background-size: 100% 100%;
    }
  }
}

